@model CreateOrEditSupplierViewModel

@{
    ViewData["Title"] = "Edit Supplier";
}

<form asp-action="Edit" method="post">
  <h3>supplier's status </h3>
      <select asp-for="Active">
        <option value="true">Active</option>
        <option value="false">Deactivated</option>
      </select>
    <br/>
  <div class="mb-3">
      @if(Model.FullName != null){
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" type="text" class="form-control">
      }else{
        <label asp-for="CompanyName" class="form-label"></label>
        <input asp-for="CompanyName" type="text" class="form-control">
      }
  </div>
  <div class="mb-3">
      @if(Model.Cpf != null){
        <label asp-for="Cpf" class="form-label"></label>
        <input asp-for="Cpf" type="number" class="form-control">
      }else{
        <label asp-for="Cnpj" class="form-label"></label>
        <input asp-for="Cnpj" type="number" class="form-control">
      }
  </div> 
   <div class="mb-3">
    @if(Model.BirthDate != null){
        <label asp-for="BirthDate" class="form-label"></label>
        <input asp-for="BirthDate" type="date" class="form-control">    
    }else{
        <label asp-for="OpenDate" class="form-label"></label>
        <input asp-for="OpenDate" type="date" class="form-control">    
    }
  </div>
  <div class="mb-3">
    <label asp-for="FantasyName" class="form-label"></label>
    <input asp-for="FantasyName" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Email.EmailAddress" class="form-label"></label>
    <input asp-for="Email.EmailAddress" type="email" class="form-control">
  </div>
  <div class="row" style="gap: 10px;">
    @if (Model.FirstPhone.Number != null)
    {
    <div >
        <label asp-for="FirstPhone.Ddd" class="form-label"></label>
        <input asp-for="FirstPhone.Ddd" type="number" class="form-control">
        <label asp-for="FirstPhone.Number" class="form-label"></label>
        <input asp-for="FirstPhone.Number" type="number" class="form-control">
    </div>
          @Html.ActionLink("Delete Phone", "DeletePhone","Phone", new UpdateOrDeletePhoneViewModel
                                                                  { Id = Model.FirstPhone.Id,
                                                                    Ddd = Model.FirstPhone.Ddd,
                                                                    Number = Model.FirstPhone.Number,
                                                                  })
    }
    @if(Model.SecondPhone.Number != null)
    {
     <div>
        <label asp-for="SecondPhone.Ddd" class="form-label"></label>
        <input asp-for="SecondPhone.Ddd" type="number" class="form-control">
        <label asp-for="SecondPhone.Number" class="form-label"></label>
        <input asp-for="SecondPhone.Number" type="number" class="form-control">
    </div>
          @Html.ActionLink("Delete Phone", "DeletePhone","Phone", new UpdateOrDeletePhoneViewModel
                                                                  { Id = Model.SecondPhone.Id,
                                                                    Ddd = Model.SecondPhone.Ddd,
                                                                    Number = Model.SecondPhone.Number,
                                                                  })
    }
    @if (Model.ThirdPhone.Number != null)
    {
     <div>
        <label asp-for="ThirdPhone.Ddd" class="form-label"></label>
        <input asp-for="ThirdPhone.Ddd" type="number" class="form-control">
        <label asp-for="ThirdPhone.Number" class="form-label"></label>
        <input asp-for="ThirdPhone.Number" type="number" class="form-control">
    </div>
          @Html.ActionLink("Delete Phone", "DeletePhone","Phone", new UpdateOrDeletePhoneViewModel
                                                                  { Id = Model.ThirdPhone.Id,
                                                                    Ddd = Model.ThirdPhone.Ddd,
                                                                    Number = Model.ThirdPhone.Number,
                                                                  })
    }
    @if (Model.Phone.Count < 3)
    {
      <div>
          @Html.ActionLink("Insert Phone", "InsertPhone","Phone", new { id = Model.Id })
      </div>
    }
   
  </div>
    <div class="mb-3">
    <label asp-for="Address.Street" class="form-label"></label>
    <input asp-for="Address.Street" type="text" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.Number" class="form-label"></label>
    <input asp-for="Address.Number" type="number" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.Neighborhood" class="form-label"></label>
    <input asp-for="Address.Neighborhood" type="text" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.City" class="form-label"></label>
    <input asp-for="Address.City" type="text" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.State" class="form-label"></label>
    <input asp-for="Address.State" type="text" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.ZipCode" class="form-label"></label>
    <input asp-for="Address.ZipCode" type="number" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.Reference" class="form-label"></label>
    <input asp-for="Address.Reference" type="text" class="form-control">
  </div>
    <div class="mb-3">
    <label asp-for="Address.Complement" class="form-label"></label>
    <input asp-for="Address.Complement" type="text" class="form-control">
  </div>
    <input asp-for="Address.Id" type="text" hidden>
    <input asp-for="Id" type="text" hidden>
    <input asp-for="Email.Id" type="text" hidden>
    <input asp-for="Address.Id" type="text" hidden>
    <input asp-for="InsertDate" type="datetime" hidden>
    <input asp-for="UpdateDate" type="datetime" hidden>
    @if(Model.FirstPhone.Number != null && Model.FirstPhone.Ddd != null)
    {
      <input asp-for="FirstPhone.Id" type="text" hidden>
    }
     @if(Model.SecondPhone.Number != null && Model.FirstPhone.Ddd != null)
    {
      <input asp-for="SecondPhone.Id" type="text" hidden>
    }
     @if(Model.ThirdPhone.Number != null && Model.FirstPhone.Ddd != null)
    {
      <input asp-for="ThirdPhone.Id" type="text" hidden>
    }
  <button type="submit" class="btn btn-primary">Edit</button>
</form>


@section Scripts{
    @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}